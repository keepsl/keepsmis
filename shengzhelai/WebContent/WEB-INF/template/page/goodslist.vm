#set($layout="layout/default-manager.vm")
<div class="hori-cate-area">
	<div class="cate-l-1">
		<div class="wrapper ">
			#foreach ($list in $pclasslist)
				<a data-ga-event="一级品类切换:点击:$list.classname" #if($list.id==${pclassid}) class="active" #end href="${path}/goods/list/$list.id">$list.classname</a>
			#end
		</div>
	</div>
	<div class="cate-l-2">
		<div class="wrapper">
			#foreach ($list in $classlist)
				<a data-ga-event="二级品类切换:点击:$list.classname" #if($list.id==${classid}) class="active" #end href="${path}/goods/list/$list.id">$list.classname</a>
			#end
		</div>
	</div>
</div>
<div class="wrapper home-wrapper">
	<h1 class="sno">女装优惠券</h1>

	<div class="order-area">
		<ul class="sort-type">
			<li data-ga-event="排序_综合:点击:品类页" data-sort="0" class="active">综合</li>
			<li data-ga-event="排序_销量:点击:品类页" data-sort="1">销量</li>
			<li data-ga-event="排序_价格:点击:品类页" data-sort="2">价格</li>
			<li data-ga-event="排序_优惠额:点击:品类页" data-sort="4">优惠额</li>
			<li data-ga-event="排序_优惠力度:点击:品类页" data-sort="3">优惠力度</li>
		</ul>

		<ul class="price-filter">
			<li data-price="20"><span><i></i></span>20元券</li>
			<li data-price="50"><span><i></i></span>50元券</li>
			<li data-price="100"><span><i></i></span>100元券</li>
		</ul>
	</div>
	<div class="zk-list g-zk-list clearfix" id="couponList">
		#foreach ($list in $goodslist.record)
		<div class="zk-item">
			<div class="img-area">
				<a title="$list.goodsname" target="_blank" href="${path}/goods/info/$list.id">
					<div data-ga-event="商品_右上角领券:点击:品类页" class="lq">
						<div class="lq-t">
							<p class="lq-t-d1">领优惠券</p>
							<p class="lq-t-d2">省<span>$list.couponprice</span>元</p>
						</div>
						<div class="lq-b"></div>
					</div>
					<div class="bottom-info">
						<p data-endtime="$list.endtime" class="time-count"></p>
					</div>
					<img data-ga-event="商品_图片:点击:品类页" class="lazy" data-original="${viewgoodspath}/$list.goodsimage" alt="$list.goodsname">
				</a>
			</div>
			<p class="title-area elli"><span class="post-free">包邮</span>$list.goodsname</p>
			<div class="raw-price-area">现价：&yen;$list.currentprice<p class="sold">已领 $list.tocouponnum 张券</p></div>
			<div class="info">
				<div class="price-area">
					<span class="price">&yen;<em class="number-font">$NumericTool.format("#0",$list.couponafterprice)</em><em class="decimal">.$NumericTool.getTheDecimal($list.couponafterprice)</em><i></i></span>
				</div>
				<div class="buy-area">
					<a data-ga-event="商品_立即领券:点击:品类页" rel="nofollow" target="_blank" href="$list.tocouponsurl">
						<span class="coupon-amount">去#dictk2vtag('dic_goods_source',$!{list.goodssource})</span>
						<span class="btn-title">火速领券</span>
					</a>
				</div>
				<div class="platform-area"><img src="${path}/skins/template/img/#if($list.goodssource==1)platform_taobao.png#elseif($list.goodssource==2)platform_tmall.png#end">#dictk2vtag('dic_goods_source',$!{list.goodssource})</div>
			</div>
		</div>
		#end
	</div>
	<div data-ga-event="查看更多按钮:点击:品类页" class="more-coupon">
		<span id="moreCoupon" class="btn loading-text">查看更多优惠券</span>
	</div>
	
	<div class="pager sno">
		<a class="disabled" href="javascript:;">上一页</a>
		<a href="/g/nvzhuang/?p=1">下一页</a>
	</div>
</div>